lightGreen = #86bb5d
lightGrey = #777
orange = #FF7F00
darkblue = #24274c
border_style = solid 1px rgba(0,0,0,0.2)

body, html
    margin 0
    font-family arial
    height 100%
.language
    position absolute
    top 10px
    left 5%
    color lightGrey
    text-decoration none
.pull-left
    float left
.panel
    position relative
    height 100%
    width 20%
    border-right border_style
    .logo
        text-align center
        margin-top 1em
        img
            width 90%
    .descriptionContainer
        width 100%
        padding 10px 0
        .description
            font-size 14px
            letter-spacing 1px
            width 90%
            margin auto
            text-align justify
            color lightGrey
    .login-form
        font-size 1em
        a
            width 100%
    .userInfoContainer
        width 100%
        .userInfo
            width 80%
            margin auto
            .text
                font-size 15px
                text-align justify
            h3
                margin-top 0
    footer
        position absolute
        bottom 0
        width 100%
        height 6em
        .footer-content
            margin auto
            width 95%
            text-align center
            position relative
            .by
                display inline-block
                position relative
                max-width 50%
                color lightGrey
                font-size 0.8em
                line-height 1em
                text-transform capitalize
                &:before, &:after
                    content: "";
                    position: absolute;
                    border-top: border_style
                    top: 0.5em;
                    width: 50%;
                &:before
                    right: 100%;
                    margin-right: 5px;
                &:after
                    left: 100%;
                    margin-left: 5px;
            .socialLinks
                margin 10px 0px
                .facebook
                    background-image url('/images/social/facebookLink.png')
                .twitter
                    background-image url('/images/social/twitterLink.png')
                .github
                    background-image url('/images/social/githubLink.png')
                a
                    background-position 0 0
                    height 64px
                    width 79px
                    background-repeat no-repeat
                    display inline-block
                    transition none
                a:hover
                    background-position 0 -64px
.map-container
    height 100%
    width 80%
    position absolute
    display inline-block
    #map-canvas
        position absolute
        width 100%
        height 100%